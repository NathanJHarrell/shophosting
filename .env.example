# ShopHosting.io Environment Configuration
# Copy this file to .env and update with your actual values:
# cp /opt/shophosting/.env.example /opt/shophosting/.env

# ===================
# Flask Configuration
# ===================
# REQUIRED: Generate with: python3 -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=

# Environment: 'production' or 'development'
FLASK_ENV=production
FLASK_DEBUG=false

# ===================
# Database Configuration
# ===================
DB_HOST=localhost
DB_USER=shophosting_app
# REQUIRED: Set your database password
DB_PASSWORD=
DB_NAME=shophosting_db
DB_POOL_SIZE=5

# ===================
# Redis Configuration
# ===================
REDIS_URL=redis://localhost:6379/1

# ===================
# Email Configuration
# ===================
# Set EMAILS_ENABLED=true to enable email sending
EMAILS_ENABLED=false

# SMTP settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# Email addresses
FROM_EMAIL=noreply@shophosting.io
FROM_NAME=ShopHosting.io
SUPPORT_EMAIL=support@shophosting.io
SALES_EMAIL=sales@shophosting.io

# ===================
# Stripe Configuration
# ===================
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# ===================
# Domain Configuration
# ===================
BASE_DOMAIN=shophosting.io
ADMIN_EMAIL=admin@shophosting.io

# ===================
# Customer Container Settings
# ===================
# Base directory for customer data
CUSTOMERS_BASE_PATH=/var/customers

# Port range for customer containers
PORT_RANGE_START=8001
PORT_RANGE_END=8100

# Default resource limits
DEFAULT_MEMORY_LIMIT=1g
DEFAULT_CPU_LIMIT=1.0

# ===================
# Backup Configuration (Restic)
# ===================
# REQUIRED for backup functionality
RESTIC_REPOSITORY=sftp:backup-user@backup-server:/path/to/backups
RESTIC_PASSWORD_FILE=/path/to/.restic-password

# ===================
# Gunicorn Configuration (optional)
# ===================
# Override defaults in gunicorn.conf.py
# GUNICORN_WORKERS=4
# GUNICORN_BIND=127.0.0.1:5000
# GUNICORN_TIMEOUT=30
# GUNICORN_MAX_REQUESTS=1000
