# ShopHosting.io Environment Configuration
# Copy this file to .env and update with your actual values:
# cp /opt/shophosting.io/.env.example /opt/shophosting.io/.env

# ===================
# Flask Configuration
# ===================
SECRET_KEY=change-this-to-a-long-random-string-in-production
FLASK_DEBUG=False

# ===================
# Database Configuration
# ===================
DB_HOST=localhost
DB_USER=shophosting_app
DB_PASSWORD=YourSecurePasswordHere123!
DB_NAME=shophosting_db

# ===================
# Redis Configuration
# ===================
REDIS_HOST=localhost
REDIS_PORT=6379

# ===================
# SMTP Configuration (for sending welcome emails)
# ===================
# Leave blank to disable email notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@shophosting.io

# ===================
# Domain Configuration
# ===================
BASE_DOMAIN=shophosting.io
ADMIN_EMAIL=admin@shophosting.io

# ===================
# Customer Container Settings
# ===================
# Base directory for customer data
CUSTOMERS_BASE_PATH=/var/customers

# Port range for customer containers
PORT_RANGE_START=8001
PORT_RANGE_END=8010

# Default resource limits
DEFAULT_MEMORY_LIMIT=1g
DEFAULT_CPU_LIMIT=1.0
